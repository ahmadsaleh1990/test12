<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/listview_divider"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/label_item"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:background="@color/White"
        android:textAppearance="@style/TextAppearance.Medium"
        android:layout_marginRight="1dp" />
    
    <EditText
        android:id="@+id/edit_text_notes"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_marginRight="1dp"
        android:textAppearance="@style/TextAppearance.Large"
        android:gravity="center"
        android:inputType="textMultiLine|textCapSentences"
        android:minLines="2"
        android:scrollbars="vertical"
        android:background="@drawable/edit_text_share_of_share_note"
        android:imeOptions="actionNone" />
    
    <me.SyncWise.Android.Widgets.TinyNumberPicker
        xmlns:tnp="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tiny_number_picker_share_of_shelf"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginRight="1dp"
        android:background="@color/White"
        tnp:iconSize="27dp"
        tnp:isDecimal="true" />
    
    <me.SyncWise.Android.Widgets.TinyNumberPicker
        xmlns:tnp="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tiny_number_picker_competitor_share_of_shelf"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginRight="1dp"
        android:background="@color/White"
        tnp:iconSize="27dp"
        tnp:isDecimal="true" />
	
    <me.SyncWise.Android.Widgets.TinyNumberPicker
        xmlns:tnp="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tiny_number_picker_category"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginRight="1dp"
        android:background="@color/White"
        tnp:iconSize="27dp"
        tnp:isDecimal="true" />
    
    <TextView
        android:id="@+id/label_percentage"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/White"
        android:textAppearance="@style/TextAppearance.Medium"
        android:text="@string/share_of_shelf_percentage_label"
        android:layout_marginRight="1dp" />
    
    <TextView
        android:id="@+id/label_bda_meter"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/White"
        android:textAppearance="@style/TextAppearance.Medium"
        android:text="@string/share_of_shelf_bda_meter_label"
        android:layout_marginRight="1dp" />
    
    <TextView
        android:id="@+id/label_bda_percentage"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/White"
        android:textAppearance="@style/TextAppearance.Medium"
        android:text="@string/share_of_shelf_bda_percentage_label" />

</LinearLayout>