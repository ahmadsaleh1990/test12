<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_sales_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:id="@+id/layout_big_uom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
    
        <TextView
            android:id="@+id/label_price_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Small"
		    android:textColor="@color/Brown"
		    android:textStyle="bold"
		    android:drawableLeft="@drawable/coins" />
        
        <EditText
			android:id="@+id/big_shelf_price" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center" 
			android:inputType="numberDecimal"
			android:hint="Shelf Price"
			android:selectAllOnFocus="true"
			android:visibility="gone"/>
        
        <me.SyncWise.Android.Widgets.TinyNumberPicker
            xmlns:tnp="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tiny_number_picker_quantity_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tnp:iconSize="27dp" />
        
		<TextView
		    android:id="@+id/label_quantity_big"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textAppearance="@style/TextAppearance.Medium"
		    android:textColor="@color/Black"
		    android:textStyle="bold" />
		
		<TextView
		    android:id="@+id/label_stock_big"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textAppearance="@style/TextAppearance.Medium"
		    android:textColor="@color/Black"
		    android:textStyle="bold" />
	
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/layout_medium_uom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
    
        <TextView
            android:id="@+id/label_price_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Small"
		    android:textColor="@color/Brown"
		    android:textStyle="bold"
		    android:drawableLeft="@drawable/coins" />
        
        <EditText
            android:id="@+id/medium_shelf_price" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" 
            android:inputType="numberDecimal"
            android:hint="Shelf Price"
            android:selectAllOnFocus="true"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/label_medium_shelf_price"
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textAppearance="@style/TextAppearance.Medium"
		    android:textColor="@color/Black"
		    android:textStyle="bold" 
		    android:visibility="gone"/>
    
        <me.SyncWise.Android.Widgets.TinyNumberPicker
            xmlns:tnp="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tiny_number_picker_quantity_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tnp:iconSize="27dp" />
    
		<TextView
		    android:id="@+id/label_quantity_medium"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textAppearance="@style/TextAppearance.Medium"
		    android:textColor="@color/Black"
		    android:textStyle="bold" />
		
		<TextView
		    android:id="@+id/label_stock_medium"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textAppearance="@style/TextAppearance.Medium"
		    android:textColor="@color/Black"
		    android:textStyle="bold" />
	
	</LinearLayout>
		
    <LinearLayout
        android:id="@+id/layout_small_uom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
    
        <TextView
            android:id="@+id/label_price_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Small"
		    android:textColor="@color/Brown"
		    android:textStyle="bold"
			android:text="@string/free_label_case"
		    android:drawableLeft="@drawable/coins" />
        
        <EditText
			android:id="@+id/small_shelf_price" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center" 
			android:inputType="numberDecimal"
			android:hint="Shelf Price"
			android:selectAllOnFocus="true"
			android:visibility="gone"/>
        
        <TextView
            android:id="@+id/label_small_shelf_price"
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textAppearance="@style/TextAppearance.Medium"
		    android:textColor="@color/Black"
		    android:textStyle="bold"
		    android:visibility="gone" />
        
        <me.SyncWise.Android.Widgets.TinyNumberPicker
            xmlns:tnp="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tiny_number_picker_quantity_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tnp:iconSize="27dp" />
    
		<TextView
		    android:id="@+id/label_quantity_small"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textAppearance="@style/TextAppearance.Medium"
		    android:textColor="@color/Black"
		    android:textStyle="bold" />
		
		<TextView
		    android:id="@+id/label_stock_small"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textAppearance="@style/TextAppearance.Medium"
		    android:textColor="@color/Black"
		    android:textStyle="bold" />
		
	</LinearLayout>
	
       
<LinearLayout
		android:id="@+id/layout_free_uom_case"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:visibility="gone" >
   
		<TextView
			android:id="@+id/label_price_free_case"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAppearance="@style/TextAppearance.Small"
			android:textColor="@color/Brown"
			android:textStyle="bold"
			 
			android:drawableLeft="@drawable/coins" />
		
        <me.SyncWise.Android.Widgets.TinyNumberPicker
            xmlns:tnp="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tiny_number_picker_quantity_free_case"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:visibility="gone"
            tnp:iconSize="27dp" />
   
		<TextView
		    android:id="@+id/label_quantity_free_case"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textAppearance="@style/TextAppearance.Medium"
		    android:textColor="@color/Black"
		    android:textStyle="bold" />
		<CheckBox android:layout_height="wrap_content"
	    	  android:layout_width="wrap_content"
	    	  android:id="@+id/checkbox_available" 
	     	  android:textAppearance="@style/TextAppearance.Medium"
	     	  android:text="@string/available"/>
		
	</LinearLayout>
	<LinearLayout
		android:id="@+id/layout_free_uom"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:visibility="gone" >
   
		<TextView
			android:id="@+id/label_price_free"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAppearance="@style/TextAppearance.Small"
			android:textColor="@color/Brown"
			android:textStyle="bold"
			android:text="@string/free_label"
			android:drawableLeft="@drawable/coins" />
		
        <me.SyncWise.Android.Widgets.TinyNumberPicker
            xmlns:tnp="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tiny_number_picker_quantity_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tnp:iconSize="27dp" />
   
		<TextView
		    android:id="@+id/label_quantity_free"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textAppearance="@style/TextAppearance.Medium"
		    android:textColor="@color/Black"
		    android:textStyle="bold" />
		<CheckBox 
	    	  android:layout_height="wrap_content" 
	  		  android:layout_width="wrap_content" 
	  		  android:id="@+id/checkbox_not_available" 
	   	      android:textAppearance="@style/TextAppearance.Medium" 
	  		  android:text="@string/not_available"/>
		
	</LinearLayout>
     
	
	
	
	
	
	
</LinearLayout>