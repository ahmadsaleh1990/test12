<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton android:id="@+id/icon_increment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/numberpicker_up_btn"
        android:paddingTop="22dip"
        android:paddingBottom="22dip"
        android:contentDescription="@string/contentDescription" />

    <EditText
        android:id="@+id/numberpicker_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Large"
        android:gravity="center"
        android:singleLine="true"
        android:background="@drawable/numberpicker_input"
        android:imeOptions="actionNone" />

    <ImageButton android:id="@+id/icon_decrement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/numberpicker_down_btn"
        android:paddingTop="22dip"
        android:paddingBottom="22dip"
        android:contentDescription="@string/contentDescription" />

</merge>