<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    android:gravity="center_vertical" >
    
    <!-- Targeted Subject -->
    
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            
            <ImageView
                android:id="@+id/icon_targeted_subject"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/contentDescription" />
            
	        <TextView
	            android:id="@+id/label_subject_code"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#BB8412" />
            
        </LinearLayout>
        
        <TextView
            android:id="@+id/label_subject_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            
            <ImageView
                android:id="@+id/icon_targeted_sub_subject"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/contentDescription" />
            
	        <TextView
	            android:id="@+id/label_sub_subject_code"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#BB8412" />
            
        </LinearLayout>
        
        <TextView
            android:id="@+id/label_sub_subject_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black" />
        
    </LinearLayout>
    
    <!-- Frequency -->
    
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center" >
        
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/piechart"
            android:contentDescription="@string/contentDescription" />
        
        <TextView
            android:id="@+id/label_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF024EAE" />
        
    </LinearLayout>
    
    <!-- Coverage -->
    
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center" >
        
        <TextView
            android:id="@+id/label_coverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF762302" />
        
        <FrameLayout
           	android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >
        
	        <!-- Progress Bar -->
	        
	        <ProgressBar
	            android:id="@+id/progress_bar"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
				android:layout_gravity="center"
	            style="@android:style/Widget.ProgressBar.Horizontal"
	            android:progressDrawable="@drawable/progress_horizontal"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:max="100" />
	        
	        <!-- Percentage Label -->
	        
	        <TextView
	            android:id="@+id/label_percentage"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/Black"
	            android:textAppearance="@style/TextAppearance.Small"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:textStyle="bold" />
        
        </FrameLayout>
        
    </LinearLayout>

</LinearLayout>