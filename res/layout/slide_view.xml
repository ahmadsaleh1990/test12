<merge xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <LinearLayout
		android:id="@+id/outer_layout_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/slider_outer_track_background" >
    
	    <FrameLayout
	        android:id="@+id/inner_layout_slider"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="6dp"
	        android:layout_marginBottom="6dp"
	        android:layout_marginLeft="1dp"
	        android:layout_marginRight="1dp"
	        android:background="@drawable/slider_inner_track_background" >
		    
		    <TextView
		        android:id="@+id/label_slide_view"
		        android:layout_width="wrap_content"
		        android:minWidth="150dp"
		        android:maxWidth="250dp"
		        android:maxLines="1"
		        android:layout_height="30dp"
		        android:layout_gravity="center_vertical"
		        android:layout_marginLeft="60dp"
		        android:gravity="center"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:textAppearance="@style/TextAppearance.Large"
		        android:textColor="@color/White"
		        android:shadowColor="@color/Black"
		        android:shadowDx="5"
		        android:shadowDy="5"
		        android:shadowRadius="10" />
	
			<ImageView
			   	android:id="@+id/icon_slider"
			    android:layout_width="60dp"
				android:layout_height="30dp"
				android:layout_gravity="center_vertical"
				android:padding="4dp"
				android:clickable="true"
				android:src="@drawable/slider_arrow_right"
				android:background="@drawable/slider_background"
				android:contentDescription="@string/contentDescription" />
		    
	    </FrameLayout>
    
    </LinearLayout>
    
</merge>