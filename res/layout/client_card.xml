<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_client_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/LightSkyBlue" >
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/RoyalBlue"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
   	    android:layout_marginTop="45dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:paddingLeft="80dp"
        android:orientation="horizontal"
        android:background="#2A000000" >
    
    	<ImageView
    	    android:id="@+id/icon_birthday_cake"
    	    android:layout_width="40dp"
    	    android:layout_height="40dp"
    	    android:visibility="gone"
    	    android:src="@drawable/birthday_cake"
    	    android:contentDescription="@string/contentDescription" />
        
	    <TextView
	        android:id="@+id/label_client_name"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textAppearance="@style/TextAppearance.Medium"
	        android:textColor="@color/Black"
	        android:textStyle="bold"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp" />
    
    </LinearLayout>
    
    <ImageView
        android:id="@+id/icon_client_card"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="left|top"
        android:layout_margin="15dp"
        android:background="@drawable/black_rounded_rectangle"
        android:src="@drawable/user"
        android:contentDescription="@string/contentDescription" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/RoyalBlue"
        android:layout_gravity="bottom" />
    
</FrameLayout>