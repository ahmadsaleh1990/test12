<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_promotion_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" >

    <!-- Promotion Detail - Icon -->

    <ImageView
        android:id="@+id/icon_promotion_detail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/dpromotion_icon" />

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:paddingRight="30dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:paddingRight="30dp" >

        <!-- Promotion Detail - Name -->

        <TextView
            android:id="@+id/label_promotion_detail_ordered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:shadowColor="@color/listview_divider_light"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="@string/ordered_label"
            android:textAppearance="@style/TextAppearance.Medium"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Promotion Detail - ItemCode -->

            <TextView
                android:id="@+id/label_promotion_itemcode_ordered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.Small"
                android:textColor="@color/DeepSkyBlue" />

            <!-- Promotion Detail - Quantity -->

            <TextView
                android:id="@+id/label_promotion_dtail_ordered_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.Small"
                android:textColor="@color/DeepSkyBlue" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:paddingRight="30dp" >

        <TextView
            android:id="@+id/label_promotion_detail_offered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:shadowColor="@color/listview_divider_light"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="@string/offered_label"
            android:textAppearance="@style/TextAppearance.Medium"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/label_promotion_itemcode_offered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.Small"
                android:textColor="@color/DeepSkyBlue" />

            <TextView
                android:id="@+id/label_promotion_dtail_offered_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.Small"
                android:textColor="@color/DeepSkyBlue" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</LinearLayout>