<!-- Collection Details -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <!-- Collection Item - Icon -->
    
    <ImageView
        android:id="@+id/icon_collection_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/money"
        android:contentDescription="@string/contentDescription" />
    
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >
        
        <!-- Collection Item - Amount -->
        
        <TextView
            android:id="@+id/label_collection_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Medium"
            android:textColor="@color/Black"
            android:textStyle="bold" />
        
        <!-- Collection Item - Bank Code -->
        
		<TextView
		    android:id="@+id/label_bank_code"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="@style/TextAppearance.Small"
		    android:textColor="@color/DeepSkyBlue" />
        
        <!-- Collection Item - Check Code -->
	        
		<TextView
		    android:id="@+id/label_check_code"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="@style/TextAppearance.Small"
		    android:textColor="@color/DeepSkyBlue" />
        
	</LinearLayout>        

</LinearLayout>